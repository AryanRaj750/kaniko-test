pipeline {
    agent none
    environment {
        JAVA_WEB_API = 'http://52.41.117.187:31127/sentiment'
        IMAGE_NAME   = '166287152401.dkr.ecr.us-west-2.amazonaws.com/sa-frontend'
        IMAGE_TAG    = 'v1'
    }
    stages {
        stage('React-Frontend-Image-Build') {
            agent {
                node {
                    label 'slave2'
                }
            }
            options {
                timeout(time: 1, unit: 'HOURS') 
                retry(1) 
            }
            steps {
                echo 'Building Front-End React App'
                sh   "sed  -i 's,http://localhost:8080/sentiment,$JAVA_WEB_API,g' sa-frontend/src/App.js"
                sh   'cat sa-frontend/src/App.js'
                sh   'docker build -f ./sa-frontend/Dockerfile -t sa-frontend ./sa-frontend'
                sh   'docker tag sa-frontend:latest ${IMAGE_NAME}:${IMAGE_TAG}'
                
            }
        }   
        stage('React-Frontend-Image-Push') {
            agent {
                node {
                    label 'slave2'
                }
            }
            options {
                timeout(time: 1, unit: 'HOURS') 
                retry(1) 
            }
            steps {
                script {
                    sh 'aws ecr get-login-password --region us-west-2 | docker login --username AWS --password-stdin 166287152401.dkr.ecr.us-west-2.amazonaws.com'
                    sh 'docker push ${IMAGE_NAME}:${IMAGE_TAG}'
                    echo 'Image has pushed!'
                }
                
            }
        }  
        stage('Test-Sa-frontend') {
            agent {
                node {
                    label 'slave1'
                }
            }
            options {
                timeout(time: 1, unit: 'HOURS') 
                retry(1) 
            }
            steps {
                script {
                    sh 'kubectl apply -f resource-manifests/sa-frontend-deployment.yaml -n test'
                    sh 'kubectl apply -f resource-manifests/service-sa-frontend-lb.yaml -n test'                    
                }                
            }
        }       
    }
}
